auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
	address 192.168.8.254
	netmask 255.255.255.0
	broadcast 192.168.8.255
	hwaddress ether dd:80:c0:a8:08:fe                


auto eth1
iface eth0 inet static
	address 192.168.8.253
	netmask 255.255.255.0
	broadcast 192.168.8.255
	gateway 192.168.8.2
	hwaddress ether dd:80:c0:a8:08:fd