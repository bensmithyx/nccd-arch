auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
	address 192.168.5.1
	netmask 255.255.255.0
	broadcast 192.168.5.255
	gateway 192.168.5.254

auto eth1
iface eth1 inet static
	address 192.168.252.1
	netmask 255.255.255.0
	broadcast 192.168.252.255

route add -net 172.16.0.0/21 gw 192.168.252.254
route add -net 10.0.0.0/24 gw 192.168.252.254
route add -net 192.168.4.0/24 gw 192.168.253.254
