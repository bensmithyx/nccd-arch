auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
	address 192.168.8.2
	netmask 255.255.255.0
	broadcast 192.168.8.255


auto eth1
iface eth1 inet static
	address 192.168.5.1
	netmask 255.255.255.0
	broadcast 192.168.5.255

auto eth2
iface eth2 inet static
	address 192.168.0.2
	netmask 255.255.255.0
	broadcast 192.168.0.255
	gateway 192.168.0.254
  